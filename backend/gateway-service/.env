# 서버 설정
PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# 서비스 URL 설정
TODO_SERVICE_URL=http://todo-service
BOARD_SERVICE_URL=http://board-service
FILE_SERVICE_URL=http://file-service

# API 설정
API_PREFIX=/api
PROXY_TIMEOUT=30000
PROXY_LIMIT_SIZE=10mb

# 보안 설정
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_EXPOSED_HEADERS=Content-Range,X-Total-Count
CORS_MAX_AGE=3600

# 로깅 설정
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE_PATH=logs/gateway.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# 성능 설정
BODY_PARSER_LIMIT=1mb
COMPRESSION_LEVEL=6

# 요청 제한 설정
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# 헬스체크 설정
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000 