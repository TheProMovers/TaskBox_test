# 서버 설정
PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# 데이터베이스 설정
MONGODB_URI=mongodb://admin:admin123@mongodb:27017/board_db?authSource=admin
DB_NAME=board_db
MONGODB_POOL_SIZE=10
MONGODB_CONNECT_TIMEOUT=10000

# API 설정
API_PREFIX=/api/boards
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# 보안 설정
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_EXPOSED_HEADERS=Content-Range,X-Total-Count
CORS_MAX_AGE=3600

# 로깅 설정
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE_PATH=logs/board-service.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7d

# 성능 설정
BODY_PARSER_LIMIT=1mb
COMPRESSION_LEVEL=6

# 게시판 설정
MAX_POSTS_PER_PAGE=20
SEARCH_RESULT_LIMIT=100
ALLOWED_CATEGORIES=일상,메모,아이디어,할일,프로젝트
MAX_TAG_LENGTH=20
MAX_TAGS_PER_POST=10

# 헬스체크 설정
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000 